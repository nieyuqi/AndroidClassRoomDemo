<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/white"
    android:gravity="center">

    <ImageSwitcher
        android:id="@+id/show_courseware"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scaleType="fitXY" />

    <RelativeLayout
        android:id="@+id/relative_top"
        android:layout_width="match_parent"
        android:layout_height="45dp"
        android:layout_gravity="top"
        android:layout_alignParentTop="true"
        android:background="@color/white">

        <LinearLayout 
            android:id="@+id/back_linear"
            android:layout_width="50dp"
            android:layout_height="match_parent"
            android:layout_alignParentLeft="true"
            android:layout_centerVertical="true"
            android:paddingLeft="20dp"
            android:gravity="center">
            
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@drawable/courseware_back_icon" />
        
        </LinearLayout>
        

        <TextView
            android:id="@+id/title_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_centerHorizontal="true"
            android:layout_centerVertical="true"
            style="@style/text_gray_15"
            android:maxEms="12"
            android:singleLine="true"
            android:ellipsize="end"
            android:textStyle="bold"
            android:drawableRight="@drawable/choosefile_btn_select"
            android:drawablePadding="5dp"
            android:text="" />

        <TextView
            android:id="@+id/courseware_list"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_alignParentRight="true"
            android:layout_centerVertical="true"
            android:layout_marginRight="15dp"
            android:drawableRight="@drawable/down_arrows_nor_small_icon"
            android:drawablePadding="3dp"
            android:gravity="center_vertical"
            android:maxEms="8"
            android:singleLine="true"
            android:ellipsize="end"
            android:visibility="gone"
            android:text=""/>

        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/schedule_line"
            android:layout_alignParentBottom="true"/>
    </RelativeLayout>


    <LinearLayout 
        android:id="@+id/linear_bottom"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical"
        android:layout_gravity="bottom"
		android:background="@color/white">
        
		<Gallery
		    android:id="@+id/id_gallery"
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content"
		    android:spacing="2dp"/>
		
        <View
            android:layout_width="match_parent"
            android:layout_height="1dp"
            android:background="@color/schedule_line"/>
        
        <RelativeLayout
            android:layout_width="match_parent"
        	android:layout_height="wrap_content"
        	android:orientation="horizontal"
        	android:background="@color/white">
            
            <LinearLayout
                android:id="@+id/control_linear"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="center_vertical"
                android:orientation="horizontal" >

                <ImageView
                    android:id="@+id/left_arrows_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/courseware_left_bg" />

                <TextView
                    android:id="@+id/showPageIndex_text"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:background="@drawable/schedule_list_corners"
                    android:paddingBottom="8dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="8dp"
                    android:text="" />

                <ImageView
                    android:id="@+id/right_arrows_image"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:paddingBottom="15dp"
                    android:paddingLeft="20dp"
                    android:paddingRight="20dp"
                    android:paddingTop="15dp"
                    android:src="@drawable/courseware_right_bg" />
            </LinearLayout>

            <LinearLayout
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_marginRight="15dp"
                android:layout_centerVertical="true"
                android:layout_alignParentRight="true">



            </LinearLayout>
        
        </RelativeLayout>
        
    </LinearLayout>


</FrameLayout>
