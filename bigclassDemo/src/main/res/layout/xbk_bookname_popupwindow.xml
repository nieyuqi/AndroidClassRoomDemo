<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:padding="10dp">


    <TextView
        android:id="@+id/teacher_name_bg"
        android:layout_width="wrap_content"
        android:layout_height="30dp"
        android:layout_alignLeft="@+id/book_name_title"
        android:layout_alignRight="@+id/book_name_title"
        android:layout_marginTop="20dp"
        android:background="@color/upwindow_teacher_name_bg_color"
        android:gravity="center_vertical" />

    <ImageView
        android:id="@+id/book_name_title_iv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBottom="@+id/teacher_name_bg"
        android:layout_marginLeft="10dp"
        android:src="@drawable/xbk_tool_profile_bg" />

    <TextView
        android:textSize="12sp"
        android:id="@+id/teacher_name_tv"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignBaseline="@+id/teacher_name_bg"
        android:layout_marginLeft="8dp"
        android:layout_toRightOf="@+id/book_name_title_iv"
        android:text="老师姓名"
        android:textColor="@color/upwindow_teacher_name_color" />

    <LinearLayout
        android:id="@+id/book_name_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/teacher_name_bg"
        android:layout_marginTop="@dimen/dimen_10"
        android:background="@color/upwindow_title_bg_color"
        android:orientation="horizontal">

        <View
            android:layout_width="@dimen/bd_wallet_normal_line_height_1dp"
            android:layout_height="@dimen/margin35"
            android:background="@color/book_name_upwindow_color" />

        <TextView
            style="@style/book_name_style"
            android:layout_width="60dp"
            android:text="学生姓名" />

        <View
            android:layout_width="@dimen/bd_wallet_normal_line_height_1dp"
            android:layout_height="@dimen/margin35"
            android:background="@color/book_name_upwindow_color" />

        <TextView
            style="@style/book_name_style"
            android:text="上下台" />

        <View
            android:layout_width="@dimen/bd_wallet_normal_line_height_1dp"
            android:layout_height="@dimen/margin35"
            android:background="@color/book_name_upwindow_color" />

        <TextView
            style="@style/book_name_style"
            android:text="授权" />

        <View
            android:layout_width="@dimen/bd_wallet_normal_line_height_1dp"
            android:layout_height="@dimen/margin35"
            android:background="@color/book_name_upwindow_color" />

        <TextView
            style="@style/book_name_style"
            android:text="麦克风" />

        <View
            android:layout_width="@dimen/bd_wallet_normal_line_height_1dp"
            android:layout_height="@dimen/margin35"
            android:background="@color/book_name_upwindow_color" />

        <TextView
            style="@style/book_name_style"
            android:text="摄像头" />

        <View
            android:layout_width="@dimen/bd_wallet_normal_line_height_1dp"
            android:layout_height="@dimen/margin35"
            android:background="@color/book_name_upwindow_color" />

        <TextView
            style="@style/book_name_style"
            android:text="奖牌" />

        <View
            android:layout_width="@dimen/bd_wallet_normal_line_height_1dp"
            android:layout_height="@dimen/margin35"
            android:background="@color/book_name_upwindow_color" />

    </LinearLayout>

    <View
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bd_wallet_normal_line_height_1dp"
        android:layout_alignLeft="@+id/book_name_title"
        android:layout_alignRight="@+id/book_name_title"
        android:layout_alignTop="@+id/book_name_title"
        android:background="@color/book_name_upwindow_color" />

    <View
        android:id="@+id/book_name_title_bottom"
        android:layout_width="wrap_content"
        android:layout_height="@dimen/bd_wallet_normal_line_height_1dp"
        android:layout_alignLeft="@+id/book_name_title"
        android:layout_alignRight="@+id/book_name_title"
        android:layout_below="@+id/book_name_title"
        android:background="@color/book_name_upwindow_color" />

    <ListView
        android:id="@+id/listview"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@+id/book_name_title_bottom"
        android:layout_below="@+id/book_name_title_bottom"
        android:divider="@null" />
</RelativeLayout>