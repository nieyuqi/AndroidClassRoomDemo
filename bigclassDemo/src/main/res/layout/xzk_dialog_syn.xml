<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent">

    <ImageView
        android:layout_width="@dimen/xbk_150dp"
        android:layout_height="@dimen/xbk_150dp"
        android:id="@+id/iv_syn_gif"
        android:layout_centerInParent="true"
        android:padding="@dimen/xbk_20dp"/>

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="与服务器连接中断，正在尝试重新连接教室，请稍候....."
        android:layout_below="@id/iv_syn_gif"
        android:textSize="12dp"
        android:textColor="@color/white"
        android:layout_centerHorizontal="true"
        android:id="@+id/txt_reconnect"
        android:layout_marginTop="20dp"
        android:visibility="gone"
        />

</RelativeLayout>